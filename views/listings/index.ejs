<% layout("/layouts/boilerplate") %>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter {
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
  }
  #filters .filter a {
    color: inherit;
    text-decoration: none;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .tax-info {
    display: none;
  }
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    margin-left: 2rem;
    display: flex;
    align-items: center;
  }
</style>

<div id="filters">
  <div class="filter">
    <a href="/listings" data-category="all">
      <div><i class="fa-solid fa-hotel"></i></div>
      <p name="category">All</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Treehouses">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Treehouses</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Mountains">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Cabins">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Cabins</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Amazing-Pools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing-Pools</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Camping">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Farms">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Beach">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Beach</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Domes">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </a>
  </div>

  <div class="filter">
    <a href="/listings/sort/Boats">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </a>
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Default Total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for (let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
          <%= listing.location %>, <%= listing.country %>
          <br />
          <span class="actual-price">
            &#8377; <b><%= listing.price.toLocaleString("en-IN") %></b> / night
          </span>

          <span class="tax-info">
            &nbsp; &nbsp;&#8377;
            <b
              ><%-(listing.price+listing.price*0.18).toLocaleString("en-IN") %> </b
            >/ night</span
          >
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
